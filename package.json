{
  "name": "miyabi-ai-blog",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "next:build": "next build",
    "build": "npx @cloudflare/next-on-pages@1 && node ./scripts/fix-cloudflare-root-route.js && node ./scripts/fix-cloudflare-function-async-hooks.js",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "node ./scripts/patch-cloudflare-tooling.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply miyabi_blog --local",
    "db:migrate:remote": "wrangler d1 migrations apply miyabi_blog --remote",
    "pages:build": "npm run build",
    "pages:dev": "wrangler pages dev .vercel/output/static",
    "pages:deploy": "wrangler pages deploy .vercel/output/static --project-name miyabi-ai-blog",
    "wrangler:dev": "wrangler pages dev .vercel/output/static"
  },
  "dependencies": {
    "@cloudflare/next-on-pages": "1.11.3",
    "@lexical/code": "^0.41.0",
    "@lexical/link": "^0.41.0",
    "@lexical/list": "^0.41.0",
    "@lexical/markdown": "^0.41.0",
    "@lexical/react": "^0.41.0",
    "@lexical/rich-text": "^0.41.0",
    "async_hooks": "^1.0.0",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.36.4",
    "jose": "^5.9.6",
    "lexical": "^0.41.0",
    "next": "14.2.33",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250124.0",
    "@next/swc-wasm-nodejs": "14.2.33",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.28.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.33",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.7.2",
    "vercel": "^50.22.1",
    "wrangler": "^3.114.17"
  },
  "optionalDependencies": {
    "better-sqlite3": "^12.6.2"
  }
}
