{
  "name": "miyabi-ai-blog",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npx -y node@20 ./node_modules/next/dist/bin/next dev",
    "next:build": "npx -y node@20 ./node_modules/next/dist/bin/next build",
    "build": "set \"PATH=C:\\Program Files\\Git\\bin;%PATH%\" && npx -y node@20 ./node_modules/vercel/dist/index.js build --yes && npx -y node@20 ./node_modules/@cloudflare/next-on-pages/dist/index.js --skip-build",
    "start": "npx -y node@20 ./node_modules/next/dist/bin/next start",
    "lint": "npx -y node@20 ./node_modules/next/dist/bin/next lint",
    "postinstall": "node ./scripts/patch-cloudflare-tooling.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply miyabi_blog --local",
    "db:migrate:remote": "wrangler d1 migrations apply miyabi_blog --remote",
    "pages:build": "npm run build",
    "pages:dev": "wrangler pages dev .vercel/output/static",
    "wrangler:dev": "wrangler pages dev .vercel/output/static"
  },
  "dependencies": {
    "@cloudflare/next-on-pages": "1.11.3",
    "async_hooks": "^1.0.0",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.36.4",
    "jose": "^5.9.6",
    "next": "14.2.33",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250124.0",
    "@next/swc-wasm-nodejs": "14.2.33",
    "@next/swc-win32-x64-msvc": "^14.2.33",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.28.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.7.2",
    "vercel": "^50.22.1",
    "wrangler": "^3.114.17"
  }
}
